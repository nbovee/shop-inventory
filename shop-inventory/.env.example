# Shop Inventory Configuration
SHOP_WIFI_SSID=ShopInventory
SHOP_WIFI_PASSWORD=change-me-to-secure-password
SHOP_HOSTNAME=rowan-pantry
SHOP_INSTALL_DIR=/opt/shop-inventory

# Django Settings
DJANGO_SECRET_KEY=change-me-to-secure-key
DJANGO_DEBUG=false
DJANGO_ALLOWED_HOSTS=rowan-pantry,localhost,127.0.0.1
DJANGO_SQLITE_DIR=/var/lib/shop-inventory
DJANGO_STATIC_ROOT=/var/www/shop-inventory/static
DJANGO_LANGUAGE_CODE=en-us
DJANGO_TIME_ZONE=America/New_York
DJANGO_CSRF_TRUSTED_ORIGINS=
DJANGO_SESSION_COOKIE_SECURE=true
DJANGO_CSRF_COOKIE_SECURE=true
DJANGO_SECURE_SSL_REDIRECT=true

# Email Settings
DJANGO_EMAIL_HOST=localhost
DJANGO_EMAIL_PORT=25
DJANGO_EMAIL_HOST_USER=
DJANGO_EMAIL_HOST_PASSWORD=
DJANGO_EMAIL_USE_TLS=false
DJANGO_SERVER_EMAIL=root@localhost
DJANGO_DEFAULT_FROM_EMAIL=webmaster@localhost
DJANGO_ADMIN_NAME=Shop Admin
DJANGO_ADMIN_EMAIL=

# Admin Settings
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=change-me-to-secure-password
DJANGO_SUPERUSER_EMAIL=admin@example.com

# Backup Settings
SHOP_BACKUP_PASSWORD=change-me-to-secure-password

# Gunicorn Settings
SHOP_GUNICORN_WORKERS=3
SHOP_GUNICORN_TIMEOUT=120
SHOP_GUNICORN_LOG_LEVEL=info
SHOP_GUNICORN_MAX_REQUESTS=1000
SHOP_GUNICORN_MAX_REQUESTS_JITTER=100
